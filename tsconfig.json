{
  "compilerOptions": {
    /* -----------------------------
       BASE SETTINGS
    ------------------------------ */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],

      "@lazem/firebase": ["packages/firebase"],
      "@lazem/auth": ["packages/auth"],
      "@lazem/ui": ["packages/ui"],
      "@lazem/maps": ["packages/maps"],
      "@lazem/utils": ["packages/utils"]
    },

    /* -----------------------------
       TARGET & MODULE
    ------------------------------ */
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",

    /* -----------------------------
       LIBRARIES
    ------------------------------ */
    "lib": ["DOM", "DOM.Iterable", "ESNext"],

    /* -----------------------------
       JSX / REACT
    ------------------------------ */
    "jsx": "preserve",

    /* -----------------------------
       TYPE CHECKING
    ------------------------------ */
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "noEmit": true,

    /* -----------------------------
       JS / JSON SUPPORT
    ------------------------------ */
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,

    /* -----------------------------
       PERFORMANCE
    ------------------------------ */
    "incremental": true,

    /* -----------------------------
       NEXT.JS PLUGIN
    ------------------------------ */
    "plugins": [
      {
        "name": "next"
      }
    ]
  },

  /* -----------------------------
     FILES TO INCLUDE
  ------------------------------ */
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mts",
    ".next/types/**/*.ts"
, "lib/firebase.js"  ],

  /* -----------------------------
     FILES TO EXCLUDE
  ------------------------------ */
  "exclude": ["node_modules"]
}
